float fun(int n)
{
	int i;
	float s=1.0,t=1.0; 
	for(i=2;i<=n;i++){
		t=t+i;
		s=s+1/t;
	}
	return s;
}
int main()
{
	int n;
	printf("请输入：");
	scanf("%d",&n);
	float s=fun(n);
	printf("结果为：%f",s);
	return 0;
} 
